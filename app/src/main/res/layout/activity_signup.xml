<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/black" />

        <!-- Header -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/create_account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/headerSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/signup_subtitle"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            app:layout_constraintTop_toBottomOf="@id/headerTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Step Indicator -->
        <LinearLayout
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/headerSubtitle">

            <TextView
                android:id="@+id/step1Indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_step_active" />

            <View
                android:id="@+id/line1"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/gray_border"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/step2Indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_text"
                android:background="@drawable/bg_step_inactive" />

            <View
                android:id="@+id/line2"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/gray_border"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/step3Indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_text"
                android:background="@drawable/bg_step_inactive" />

        </LinearLayout>

        <!-- Step Labels -->
        <LinearLayout
            android:id="@+id/stepLabels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/stepIndicator">

            <TextView
                android:id="@+id/step1Label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/step_user"
                android:textSize="12sp"
                android:textColor="@color/green_primary"
                android:gravity="center" />

            <TextView
                android:id="@+id/step2Label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/step_farm"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/step3Label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/step_settings"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:gravity="center" />

        </LinearLayout>

        <!-- ViewFlipper for Steps -->
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/stepLabels">

            <!-- Step 1: User Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_information"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/green_primary" />

                        <!-- Full Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/full_name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/name_hint"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/email_address"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email_hint"
                                android:inputType="textEmailAddress"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Phone (Optional) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/phone_optional"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phoneInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/phone_hint"
                                android:inputType="phone"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Password -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/password"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/passwordInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:endIconMode="password_toggle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/password_hint_signup"
                                android:inputType="textPassword"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Confirm Password -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/confirm_password"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/confirmPasswordInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:endIconMode="password_toggle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/confirmPasswordInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/confirm_password_hint"
                                android:inputType="textPassword"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Step 2: Farm Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/farm_information"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/ic_farm"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/green_primary" />

                        <!-- Farm Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/farm_name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/farmNameInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/farmNameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/farm_name_hint"
                                android:inputType="text"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Farm Location -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/farm_location"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/farmLocationInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/farmLocationInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/farm_location_hint"
                                android:inputType="textPostalAddress"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Farm Size -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/farm_size"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/farmSizeInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="@color/green_primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:suffixText="@string/hectares">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/farmSizeInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/farm_size_hint"
                                android:inputType="numberDecimal"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Crop Types -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/crop_types"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_crops"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cropChipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWheat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_wheat"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCorn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_corn"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipRice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_rice"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSoybeans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_soybeans"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCotton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_cotton"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipVegetables"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crop_vegetables"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:checkedIconVisible="true" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Step 3: App Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_settings"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/ic_settings"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/green_primary" />

                        <!-- Notifications -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/push_notifications"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/push_notifications_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_text" />

                            </LinearLayout>

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/notificationsSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/switch_thumb_selector"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="16dp"
                            android:background="@color/gray_border" />

                        <!-- Email Alerts -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email_alerts"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email_alerts_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_text" />

                            </LinearLayout>

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/emailAlertsSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/switch_thumb_selector"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="16dp"
                            android:background="@color/gray_border" />

                        <!-- Language -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/language"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/languageInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <AutoCompleteTextView
                                android:id="@+id/languageDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:text="@string/language_english" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="16dp"
                            android:background="@color/gray_border" />

                        <!-- Theme -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <RadioGroup
                            android:id="@+id/themeRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/theme_light"
                                android:checked="true"
                                android:layout_marginEnd="24dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/theme_dark"
                                android:layout_marginEnd="24dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSystem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/theme_system" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Terms and Privacy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/termsCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_agreement"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text" />

                </LinearLayout>

            </LinearLayout>

        </ViewFlipper>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/viewFlipper">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prevButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/previous"
                android:textColor="@color/green_primary"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/green_primary"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/next"
                android:textColor="@color/white"
                app:backgroundTint="@color/green_primary"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/green_primary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Already have account -->
        <LinearLayout
            android:id="@+id/loginPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textSize="14sp"
                android:textColor="@color/gray_text" />

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/login"
                android:textSize="14sp"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
