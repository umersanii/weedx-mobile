<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/green_very_light"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image Placeholder -->
        <ImageView
            android:id="@+id/galleryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Weed detection image" />

        <!-- Placeholder Icon (when no actual image) -->
        <ImageView
            android:id="@+id/placeholderIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            app:tint="@color/green_icon"
            android:contentDescription="Weed icon" />

        <!-- Zone Label -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/zoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-12"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.cardview.widget.CardView>
