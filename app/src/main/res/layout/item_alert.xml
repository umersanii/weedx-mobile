<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alertContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/green_very_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Severity Indicator -->
        <View
            android:id="@+id/severityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/green_primary" />

        <!-- Alert Icon -->
        <ImageView
            android:id="@+id/alertIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_alert_circle"
            android:contentDescription="Alert icon" />

        <!-- Alert Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/alertType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery Low"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/alertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Battery level below 20%"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Time -->
        <TextView
            android:id="@+id/alertTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="5m ago"
            android:textSize="12sp"
            android:textColor="@color/gray_text" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
